{{!
    @template block_mycertificates/custom_menu_footer

    Custom menu footer template

    Example context (json):
    {
        "hascertificates": "true",
        "coursescertificates": [
            {
                "courseid": 2,
                "shortname": "Course #1",
                "fullname": "Course #1 fullname",
                "certificates": [{
                        "name": "Certificate name",
                        "module": "simplecertificate",
                        "url": "https://link.com"
                }]
            }
        ]
    }
}}{{#hascertificates}}
    {{#coursescertificates}}
        <div class="course-card">
            <div class="card-body">
                <h5 class="course-title">{{{ fullname }}}</h5>

                {{#certificates}}
                    <div class="course-row d-flex justify-content-between align-items-center mb-2">
                        <div class="d-flex align-items-center gap-2">
                            {{#pix}} icon, {{{module}}} {{/pix}}
                            <span class="cert-name">{{{name}}}</span>
                        </div>
                        <a class="btn-view" href="{{ downloadurl }}" target="_blank">
                            {{#str}}download, core{{/str}}
                        </a>
                    </div>
                {{/certificates}}
            </div>
        </div>
    {{/coursescertificates}}
{{/hascertificates}}

{{^hascertificates}}
    <div class="alert alert-info" role="alert">
        {{#str}}nohavecertificates, block_mycertificates{{/str}}
    </div>
{{/hascertificates}}
